{
    "name": "Block Mail Track",
    "version":"1.0",
    "description":"Block annoying mailtracking",
    "manifest_version":2,

    "permissions":[
        "webRequest",
        "webRequestBlocking",
        "https://*.googleusercontent.com/",
        "https://mail.google.com/*"
    ],

    "background":{
        "scripts":["background.js"]
    },

    "page_action":{
        "default_icon":{
            "16":"icons/icon16.png",
            "32":"icons/icon16.png",
            "48":"icons/icon16.png",
            "128":"icons/icon16.png"
        }
    }
}